@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    body{
    background: #ECECEC;
    }
</style>
<div class="d-flex row justify-content-center">
    <div class="card col-6">
        @foreach (var item in @ViewBag.Cart.Details)
        {
            <div class="row py-4">
                <div class="col-3 text-center">
                    <img src="@item.ProductImage" style="width: 100px; height: 100px" /><br/>
                    <a style="color: #6c757d" href="/Cart/Remove/@item.BillDetailId"><i class="fa fa-trash-o" aria-hidden="true"></i> Delete</a>
                </div>
                <div class="col-6">
                    <h4>@item.ProductName</h4>
                </div>
                <div class="col-3 d-flex h-100 flex-column justify-content-between align-items-end">
                    <h6>@item.ProductPrice</h6>
                    <div class="d-flex justify-content-between w-100 align-items-center">
                        @if (@item.Quantity == 1)
                        {
                            <i class="fa fa-minus" aria-hidden="true"></i>
                        }
                        else
                        {
                            <a href="/Cart/@item.ProductId/-1?isCheckOut=True">
                                <i class="fa fa-minus" aria-hidden="true"></i>
                            </a>
                        }
                       
                        <h6>@item.Quantity</h6>

                        <a href="/Cart/@item.ProductId/1?isCheckOut=True">
                            <i class="fa fa-plus" aria-hidden="true"></i>
                        </a>
                    </div>
                    
                </div>
            </div>
        }
        <div class="d-flex justify-content-between py-5">
            <h4>Total:</h4>
            <h4 class="text-danger">@ViewBag.Cart.Price</h4>
        </div>
    </div>
    
</div>